<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191414"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5.5">

        <fragment
            android:id="@+id/fragment"
            android:name="takuma.idei.ideiapp.Home"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_weight="1.4"
        android:orientation="vertical">

        <fragment
            android:id="@+id/bottom_player"
            android:name="takuma.idei.ideiapp.BottomPlayer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5" />

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/nav_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_weight="0.5"
            android:background="#191414"

            app:itemIconTint="@color/buttom_navigation"
            app:itemTextColor="@color/buttom_navigation"

            app:menu="@menu/bottom_nav_menu" />
    </LinearLayout>
</LinearLayout>