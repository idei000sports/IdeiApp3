<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/list_img1"
                    style="@style/HomeListImg"
                    app:srcCompat="@drawable/loveapple" />

                <TextView
                    android:id="@+id/list_txt1"
                    style="@style/HomeListText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/list_img2"
                    style="@style/HomeListImg"
                    app:srcCompat="@drawable/loveapple" />

                <TextView
                    android:id="@+id/list_txt2"
                    style="@style/HomeListText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/list_img3"
                    style="@style/HomeListImg"
                    app:srcCompat="@drawable/loveapple" />

                <TextView
                    android:id="@+id/list_txt3"
                    style="@style/HomeListText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/list_img4"
                    style="@style/HomeListImg"
                    app:srcCompat="@drawable/loveapple" />

                <TextView
                    android:id="@+id/list_txt4"
                    style="@style/HomeListText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/list_img5"
                    style="@style/HomeListImg"
                    app:srcCompat="@drawable/loveapple" />

                <TextView
                    android:id="@+id/list_txt5"
                    style="@style/HomeListText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/list_img6"
                    style="@style/HomeListImg"
                    app:srcCompat="@drawable/loveapple" />

                <TextView
                    android:id="@+id/list_txt6"
                    style="@style/HomeListText" />
            </LinearLayout>


        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>